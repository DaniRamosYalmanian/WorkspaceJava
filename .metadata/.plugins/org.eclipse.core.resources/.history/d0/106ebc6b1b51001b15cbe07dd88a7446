
public class Empregado {
	String nome;
	String cargo;
	Double salario;
	
	void imprimir () {
		
		System.out.println("************************************************************");
		System.out.println("Nome   : " + nome + " ( " + cargo + " ) - R$: " + salario);
		System.out.println("************************************************************");
	}
	
	void aumentarSalario (double percentual) {
		salario= salario + salario * (percentual/100);
	}
	
}

