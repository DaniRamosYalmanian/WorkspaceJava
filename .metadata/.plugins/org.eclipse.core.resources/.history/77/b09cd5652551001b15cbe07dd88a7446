import java.util.Scanner;

public class timeTeste {
	public static void main(String[] args) {
		Scanner teclado = new Scanner (System.in);
		Time tempo1, tempo2;
		
		tempo1 = new Time();
		tempo2 = new Time();
		
		int h,m,s;
		
		System.out.println("Digite a hora: ");
		h = teclado.nextInt();
		
		System.out.println("Digite a minuto: ");
		m = teclado.nextInt();
		
		System.out.println("Digite a segundo: ");
		s = teclado.nextInt();
		
		tempo1.setTime(h, m, s);
		System.out.println("Hora Padrão: " + tempo1.exibirHoraPadrao());
		System.out.println("Hora Universal: " + tempo1.exibirHoraUniversal());
		
		
	}

	
	 

}
